extends layout

block content
  .container.mt-4
    h1= title

    if user
      .card.shadow.p-4.bg-light.mt-3
        h4 Nombre de usuario: #{user.username}
        h5 Email: #{user.email}
        if user.descripcion
          h6 Descripción: #{user.descripcion}
        else
          h6.text-muted (Sin descripción)

    if comentarios.length
        h4.mt-4 Comentarios recientes:
        each comentario in comentarios
          .card.mt-2.p-3
            if comentario.post
              small.text-muted En Post: 
                a(href=`/posts/${comentario.post._id}`)= comentario.post.title
            p.mb-0 Comentario: 
              strong #{comentario.content}
            small.text-muted= comentario.createdAt.toLocaleDateString('es-ES')
                  
    else
      p.text-muted Usuario no encontrado.