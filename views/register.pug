extends layout

append bodyClass
  

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-6
        .card.p-4.shadow
            h2.card-title.text-center.mb-4 Registro
            
            //- Mostrar errores
            if errors.length > 0
              .alert.alert-danger
                ul.mb-0
                  each error in errors
                    li= error.msg
            
            form(method='POST' action='/auth/register')
              .mb-3
                label.form-label(for='username') Nombre de usuario *
                input.form-control#username(
                  type='text'
                  name='username'
                  value=username || ''
                  required
                  minlength='3'
                  placeholder='Mínimo 3 caracteres'
                )
              
              .mb-3
                label.form-label(for='email') Email *
                input.form-control#email(
                  type='email'
                  name='email'
                  value=email || ''
                  required
                  placeholder='ejemplo@correo.com'
                )
              
              .mb-3
                label.form-label(for='descripcion') Descripción (opcional)
                textarea.form-control#descripcion(
                  name='descripcion'
                  rows='2'
                  maxlength='100'
                  placeholder='Cuéntanos algo sobre ti (máx. 100 caracteres)'
                )= descripcion || ''
                small.form-text.text-muted Máximo 100 caracteres
              
              .mb-3
                label.form-label(for='password') Contraseña *
                input.form-control#password(
                  type='password'
                  name='password'
                  required
                  minlength='6'
                  placeholder='Mínimo 6 caracteres'
                )
              
              .mb-3
                label.form-label(for='password2') Confirmar contraseña *
                input.form-control#password2(
                  type='password'
                  name='password2'
                  required
                  minlength='6'
                  placeholder='Repite tu contraseña'
                )
              
              button.btn.btn-primary.w-100(type='submit') Registrarse
            
            .text-center.mt-3
              p ¿Ya tienes cuenta? 
                a(href='/auth/login') Inicia sesión aquí

